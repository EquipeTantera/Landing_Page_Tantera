{
  "kind": "collectionType",
  "collectionName": "banners",
  "info": {
    "singularName": "banner",
    "pluralName": "banners",
    "displayName": "Banner",
    "description": "Armazena informações sobre banners exibidos na plataforma, incluindo imagens e suas associações com fotos."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "photo_id": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::photo.photo",
      "inversedBy": "banner_id"
    }
  }
}
