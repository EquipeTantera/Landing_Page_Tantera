{
  "kind": "collectionType",
  "collectionName": "contacts",
  "info": {
    "singularName": "contact",
    "pluralName": "contacts",
    "displayName": "contact",
    "description": "Armazena informações de contato enviadas pelos usuários, incluindo nome, email, telefone, mensagem e propósito do contato."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "telephone": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "purpose_id": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::purpose.purpose",
      "inversedBy": "contact_id"
    }
  }
}
