{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": "Modelo para armazenar informações sobre produtos disponíveis na plataforma da atlética Tantera."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "sold_out": {
      "type": "boolean",
      "required": true
    },
    "size": {
      "type": "enumeration",
      "enum": ["PP", "P", "M", "G", "GG", "GGG"],
      "required": true
    },
    "genre": {
      "type": "enumeration",
      "enum": ["masculino", "feminino", "unissex"],
      "required": true
    },
    "color": {
      "type": "enumeration", 
      "enum": ["vermelho", "azul", "verde", "amarelo", "preto", "branco"], 
      "required": true
    },
    "category_id": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "product_id"
    },
    "photo_product_id": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::photo-product.photo-product"
    }
  }
}
